#include<stdio.h>
#include<stdlib.h>
int main()
{
    char text[100];
    char ch;
    int i;
    printf("\nENTER A STRING=");
    gets(text);
    FILE *fp;
    fp = fopen("C:/Users/Dell/Desktop/BMSCE.txt","w");
    if(fp== NULL)
    {
        printf("Unable to create file.\n");
        exit(0);
    }
    fputs(text,fp);
    fclose(fp);
    fp = fopen("C:/Users/Dell/Desktop/BMSCE.txt","r");
    if ( fp == NULL )
    {
        printf( "BMSCE.txt file failed to open." ) ;
        exit(0);
    }
    do
    {

        ch = fgetc(fp);
        putchar(ch);

    } while(ch != EOF);
    fclose(fp);
    return 0;
}
